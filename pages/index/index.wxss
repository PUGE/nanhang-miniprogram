/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  background-color: #f2f1f7;
  overflow: auto;
}

.item {
  background-color: white;
  width: 90%;
  margin: 0 auto;
  border-radius: 15rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 1px 1px 2px #ccc;
  position: relative;
}

.item .end {
  position: absolute;
  width: 120rpx;
  height: 100rpx;
  right: 0;
  top: 5rpx;
}

.item view {
  line-height: 30px;
}

.button {
  display: flex;
  border-radius: 10rpx;
  font-size: 13px;
  align-items: center;
  border: 1px solid #ccc;
  margin-right: 5px;
  padding-right: 10px;
}
.button image {
  width: 25px;
  height: 25px;
  margin: 0 5px;
}
.bottom-bar {
  display: flex;
  width: 98%;
  margin: 0 auto;
  border-top: 1px solid #ccc;
  padding-top: 15rpx;
  margin-top: 15rpx;
}
.title {
  text-align: center;
  color: #333;
  font-size: 18px;
  display: block;
  line-height: 50px;
  font-weight: bold;
}

.add {
  text-align: center;
  width: 90%;
  border-radius: 15rpx;
  padding: 15rpx;
  background-color: #009fe9;
  color: white;
  font-size: 16px;
  line-height: 60rpx;
  box-shadow: 1px 1px 2px #ccc;
  margin: 20rpx auto;
}

.state {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 10px;
  top: 5px;
  color: #666;
}

.state-icon {
  width: 20rpx;
  height: 20rpx;
  background-color: green;
  border-radius: 20rpx;
  margin-right: 15rpx;
}

.no-plant {
  width: 82vw;
  height: 103vw;
  display: block;
  margin: 45rpx auto;
}

.search {
  width: 25px;
  height: 25px;
  margin-right: 5rpx;
}

.loading-info {
  position: absolute;
  width: 100%;
  text-align: center;
  top: 80px;
  bottom: 0;
  margin: auto;
  line-height: 40px;
  height: 40px;
  color: #009fe9;
}

.loading image {
  top: -140px;
}

.tool-bar {
  display: flex;
}
button.contact-btn {
  text-align: center;
  width: 704rpx !important;
  border-radius: 15rpx;
  padding: 15rpx;
  background-color: #2cad36;
  color: white;
  font-size: 16px;
  line-height: 60rpx;
  box-shadow: 1px 1px 2px #ccc;
  margin: 20rpx auto;
  display: block;
  font-weight: normal;
}
.info {
  font-size: 12px;
  width: 710rpx;
  margin: 0 auto;
  color: #999;
  text-align: center;
  margin-bottom: 5px;
}